<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Fond sombre -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#00000000"/>
            <corners android:radius="4dp"/>
        </shape>
    </item>

    <!-- Ligne néon principale -->
    <item android:left="2dp" android:top="2dp" android:right="2dp" android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#00000000"/> <!-- Transparent -->
            <stroke
                android:width="2dp"
                android:color="@color/neonColorPink"/>
            <corners android:radius="3dp"/>
        </shape>
    </item>

    <!-- Effet glitch néon : Décalage léger -->
    <item android:left="4dp" android:top="4dp" android:right="0dp" android:bottom="0dp">
        <shape android:shape="rectangle">
            <solid android:color="#00000000"/>
            <stroke
                android:width="1dp"
                android:color="@color/neonColorBlue"/>
            <corners android:radius="4dp"/>
        </shape>
    </item>
</layer-list>
